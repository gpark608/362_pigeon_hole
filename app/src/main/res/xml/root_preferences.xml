<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Preferences">

        <ListPreference
            app:entries="@array/units_of_measure"
            app:entryValues="@array/units_of_measure"
            app:iconSpaceReserved="false"
            app:key="units_of_measure"
            app:summary="Metric"
            app:title="Units of Measure" />


        <ListPreference
            app:entries="@array/units_of_weight"
            app:entryValues="@array/units_of_weight"
            app:iconSpaceReserved="false"
            app:key="unit_of_weight"
            app:summary="Kg"
            app:title="Units of Weight" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Additional Settings">

        <Preference
            app:iconSpaceReserved="false"
            app:key="project529"
            app:summary="Register your bike with Project 529"
            app:title="Project 529" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="background"
            app:title="Change Background" />

    </PreferenceCategory>
</PreferenceScreen>